<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ajarihantjain54gmail.task5.question3">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "\n Who invented plastic?  \n "
            android:textSize="30dp"
            android:textColor="#581"/>

        <Button
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edward George"
            android:onClick="Wrong3"/>
        <Button
            android:id="@+id/c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Albert Einstein"
            android:onClick="Wrong3"/>
        <Button
            android:id="@+id/c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thomas Alva Edison"
            android:onClick="Wrong3"/>
        <Button
            android:id="@+id/c4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Wesley Hyatt"
            android:onClick="Correct3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n"/>
        <Button
            android:id="@+id/bfinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish "
            android:textSize="20dp"
            android:onClick="End3"
            android:textColor="#953"/>




    </LinearLayout>

</android.support.constraint.ConstraintLayout>
